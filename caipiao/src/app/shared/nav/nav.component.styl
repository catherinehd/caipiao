@import "../../../assets/css/variable"

.nav
  position fixed
  top 0
  left 0
  width 100%
  display flex
  color $theme-white-color
  line-height 44px
  letter-spacing 2px
  padding 0 $default-h-padding
  background $theme-blue-color
  z-index 2
  .title
    width 100%
    text-align center
    font-size 17px
  .left-btn
  .right-btn
    position absolute
    bottom 0
    min-width 30px
    font-size 15px
    color inherit
    letter-spacing inherit
    line-height inherit
  .left-btn
    left $default-h-padding
    text-align left
  .right-btn
    right $default-h-padding
    text-align right
  .ques
    font-size 12px

.nav-bg
  box-sizing content-box
  height 44px

.icon-left-arrow
  height 20px
  width 20px
  stroke $theme-white-color
  fill none
  vertical-align middle
  &:active
    fill darken($theme-white-color, 10%)
