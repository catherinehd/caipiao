@import "../../../assets/css/variable"

.tab
  position fixed
  display flex
  bottom 0
  left 0
  width 100%
  height 4.9rem
  z-index 2
  background-color $theme-white-color
  box-shadow 0 0 .5rem 0 rgba(75, 75, 75, 0.12)
  .nav
    display inline-flex
    flex-grow 1
    width 33.333%
    justify-content center
    align-items center
    flex-direction column
    color $font-sub-color
    font-size $font-smaller-size
    line-height 1
  svg
    width 2.3rem
    height 2.1rem
    margin-bottom .2rem
    &[class$="-inactive"]
      fill $font-sub-svg-color
    &[class$="-active"]
      display none
      fill $theme-blue-color

  .active
    color $theme-blue-color
    svg
      &[class$="-active"]
        display block
      &[class$="-inactive"]
        display none

  .nav
    &:active
      background-color darken($theme-white-color, 10%)
