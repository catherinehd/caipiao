@import "../../../assets/css/variable.styl"

main
  &>.detail
    background $theme-white-color
    margin-bottom 1.5rem
    padding 1.5rem
    display flex
    justify-content space-between
    .left
      .top-movie
        background-size 100% !important
        width 9.2rem
        height 11.8rem
    .right
      flex-grow 1
      text-align left
      padding-left 1rem
      .star
        margin-bottom 2.1rem
        height 1.3rem
        line-height 1
        svg
          width 1.4rem
          height 1.3rem
          fill #ffc62c
        span
          color #ffc62c
          font-size $font-smaller-size

section
  margin-bottom 1.5rem
  background $theme-white-color
  padding 1.5rem 0 1rem
  &>div
    padding 1rem 1.5rem 0
  .title
    border-bottom 1px solid rgba(215,215,215,0.3)
    font-size $font-bigger-size
    color $font-main-color
    line-height 1
    padding-left 1.5rem
    padding-bottom 1rem

.movie-detail
  p
    padding 0 1.5rem
    font-size $font-normal-size

.dianping
  .title
    .num
      float right
      color #ffc62c
      font-size $font-normal-size
  .dianping-list
    padding 0
    ul
      li
        padding 1.5rem
        display flex
        justify-content space-between
        border 1px solid rgba(215,215,215,0.3)
        .tx
          height 3.3rem
          margin-right 1rem
        .detail
          .name
            font-size $font-normal-size
            color $font-main-color
            line-height 1
            margin-bottom .8rem
          .dianping-num
            margin-bottom .9rem
            .star
              display inline-block
              margin-left .8rem
              height 1.3rem
              line-height 1
              svg
                width 1.4rem
                height 1.3rem
                fill #ffc62c
              span
                color #ffc62c
                font-size $font-smaller-size
          .say
            color $font-sub-color
            font-size 1.3rem
            line-height 2.1rem
