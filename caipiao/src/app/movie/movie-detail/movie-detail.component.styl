@import "../../../assets/css/variable.styl"

main
  &>.detail
    background $theme-white-color
    margin-bottom 1.5rem
    padding 1.5rem
    display flex
    justify-content space-between
    .left
      .top-movie
        background-size 100% !important
        width 9.2rem
        height 11.8rem
    .right
      flex-grow 1
      text-align left
      padding-left 1rem
      .title
        font-size $font-normal-size
        margin-bottom 1rem
        line-height 1rem
      .star
        margin-bottom 1.5rem
        height 1.3rem
        line-height 1
        svg
          width 1.4rem
          height 1.3rem
          fill #ffc62c
        span
          color #ffc62c
          font-size $font-smaller-size
      .class
        margin-bottom 1.9rem
        color $font-sub-color
        span
          border 1px solid #1ba4dd
          color $theme-blue-color
          font-size 1rem
          line-height 1rem
          height 1rem
          display inline-block
          border-radius .7rem
          padding .2rem .5rem
      .howlong
      .onshow
        color $theme-blue-color
        font-size 1.1rem
        span
          float right
          border 1px solid $theme-blue-color
          border-radius .9rem
          display inline-block
          line-height 1
          padding .3rem .7rem
      .howlong
         margin-bottom .5rem

section
  margin-bottom 1.5rem
  background $theme-white-color
  padding 1.5rem 0 1rem
  &>div
    padding 1rem 1.5rem 0
  .title
    border-bottom 1px solid rgba(215,215,215,0.3)
    font-size $font-bigger-size
    color $font-main-color
    line-height 1
    padding-left 1.5rem
    padding-bottom 1rem

.movie-detail
  p
    padding 0 1.5rem
    font-size $font-normal-size

.dianping
  .title
    .num
      float right
      svg
        width 1.4rem
        height @width
        fill $theme-blue-color
  .dianping-list
    padding 0
    ul
      li
        padding 1.5rem
        display flex
        justify-content space-between
        border 1px solid rgba(215,215,215,0.3)
        .tx
          height 3.3rem
          margin-right 1rem
        .detail
          .name
            font-size $font-normal-size
            color $font-main-color
            line-height 1
            margin-bottom .8rem
          .dianping-num
            margin-bottom .9rem
            .star
              display inline-block
              margin-left .8rem
              height 1.3rem
              line-height 1
              svg
                width 1.4rem
                height 1.3rem
                fill #ffc62c
              span
                color #ffc62c
                font-size $font-smaller-size
          .say
            color $font-sub-color
            font-size 1.3rem
            line-height 2.1rem
          .date
            svg
              width 1.1rem
              height @width
              fill $theme-blue-color
