@import "../../../assets/css/variable.styl"

.nav
  position fixed
  top 0
  left 0
  width 100%
  color $theme-white-color
  height 44px
  letter-spacing 2px
  background $theme-blue-color
  z-index 2
  input
    margin 0.5rem auto
    height 3.4rem
    width 92%
    border-radius 17px
    display block
    padding-left 39px
    color $font-main-color
    font-size $font-normal-size
    &::placeholder
      color $theme-blue-color
  .search-bth
    position absolute
    left 30px
    top 15px
    width 13px
    height @width
    fill $theme-blue-color
    cursor pointer

.nav-bg
  box-sizing content-box
  height 44px
  background $theme-blue-color

main
  position fixed
  top 0
  width 100%
  height 100%
  box-sizing border-box
  -webkit-overflow-scrolling touch
  overflow auto
  padding-bottom 5.9rem

  .banner
    width 100%
    margin-bottom 1.5rem

  section
    background $theme-white-color
    margin-bottom 1.5rem

  .top-news
    display flex
    height 6.4rem
    width 100%
    padding 1.5rem
    background $theme-white-color
    justify-content space-between
    img
      width 3.4rem
      margin-right 1.5rem
    .news
      font-size $font-normal-size
      line-height 1.9rem
      color $font-main-color

