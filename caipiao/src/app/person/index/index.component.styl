@import "../../../assets/css/variable"

.header-padding
  background-color $theme-blue-color

.person-header
  height 16.3rem
  padding 3.8rem 0 2rem
  align-items center
  background-color $theme-white-color
  color $theme-gray-color
  .avatar
    display block
    margin 0 auto
    width 7.5rem
    height @width
    border-radius 50%
    border .5rem solid rgba(255, 255, 255, .2);
  .name
    display block
    text-align center
    font-size $font-biggest-size
    color $font-main-color
  //.icon-right-arrow
  //  width 1.6rem
  //  height 1.6rem
  //  fill $theme-white-color
  .btn
    display block
    margin 0 auto !important
    width 8rem
    height 3rem
    color $theme-gray-color
    font-size 1.3rem
    line-height 1.3rem
    height 1.3rem
    margin-top .7rem
    //border 1px solid $theme-white-color
    //border-radius .4rem
    //background-color $theme-blue-color
    //&:active
    //  bg-darken()

.login-header
  background-color $theme-white-color
  &:active
    bg-darken()

.person-main
  display flex
  flex-direction column
  .nav-list
    margin-top $default-gap
    background-color $theme-white-color
  .nav-item
    padding-left 1.5rem
    background-color $theme-white-color
    &:active
      bg-darken()
    &:not(:last-child)
      border-bottom $default-border
      //.item-box
      //  border-bottom $default-border


.item-box
  display flex
  align-items center
  height 4.8rem
  padding-right 1.5rem
  .title
    flex-grow 1
    color $font-main-color
    font-size $font-big-size
  svg:not(.icon-right-arrow)
    width 1.8rem
    height 2.1rem
    margin-right .8rem
    fill $theme-blue-color
  .icon-right-arrow
    width 1.2rem
    height @width
    fill $font-weak-color
