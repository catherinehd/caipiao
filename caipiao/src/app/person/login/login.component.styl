@import "../../../assets/css/variable"

.form-sec
  position relative

.form
  margin-top 1.5rem
  background-color $theme-white-color
  color $font-main-color
  font-size $font-bigger-size
  line-height 4.8rem
  .form-field
    position relative
    display flex
    align-items center
    padding 0 $default-h-padding
    width 100%
    height 4.8rem
    &:first-child
      border-bottom $default-border
  .form-label
    flex none
    width 7rem

.form-field
  svg
    fill $font-weak-color
    vertical-align middle
  .icon-close
    width 1.2rem
    height @width
  .icon-close-eyes
  .icon-open-eyes
    width 2.4rem
    height @width
  input
    height 2rem
    line-height 2rem
    flex auto

.btn-group
    position absolute
    right 1.2rem
    top 0
  button
    height 5.5rem;
    width 3rem
    &:active
      svg
        fill darken($font-weak-color, 10%)
  .close-btn
    text-align right

.btn-box
  display flex
  padding 7.2rem 1.5rem 2rem
  .form-btn
    flex-grow 1
    height 4.5rem
    color $theme-white-color
    font-size $font-big-size
    background-color $theme-blue-color
    border-radius @height
    &[disabled]
      background-color $theme-gray-color
    &:active
      background-color darken($theme-gray-color, 10%)
  .active
    background-color $theme-blue-color

.form-tip
  position absolute
  right 1.2rem
  width auto
  padding 1.5rem 0
  line-height 1
  color $theme-blue-color
  font-size 1.3rem
  top 9.6rem
  &:active
    font-weight 900
    color darken($theme-blue-color, 10%)

.footer-tip
  position fixed
  width 100%
  bottom 2.4rem
  text-align center
  color $font-sub-color
  font-size $font-small-size
  .agreement
  .tel
    color $theme-blue-color
    &:active
      color-darken()
  .tel
    text-decoration underline


.error
  color $theme-red-color
  font-size 1.3rem
  padding-left 1.5rem
  padding-top 1.5rem
  svg
    width 1.2rem
    height @width
    margin-right .5rem
    fill $theme-red-color

