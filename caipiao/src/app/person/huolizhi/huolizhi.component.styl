@import "../../../assets/css/variable"

.sign
  position relative
  background $theme-blue-color
  width 100%
  height 14.6rem
  text-align center
  color $theme-white-color
  svg
    fill none
    stroke $theme-white-color
    width 3.3rem
    height 4.4rem
    margin-bottom 1rem
    margin-top 2.4rem
    path
      all
        inherit
  button
    font-size $font-normal-size
    color $theme-blue-color
    background $theme-white-color
    width 8.2rem
    height 2.7rem
    display block
    margin 0 auto
    border-radius 1.4rem
    box-shadow 0 2px 2.5px 0 rgba(34, 156, 207, 0.8)
  .tips
    position absolute
    bottom 0
    width 100%
    height 3rem
    text-align left
    background rgba(52, 52, 52, 0.2)
    padding-left 1.5rem
    line-height 3rem
    svg
      fill none
      stroke $theme-white-color
      width 1.7rem
      height 1.4rem
      vertical-align middle
      margin 0
      margin-right .9rem
  .rules
    position absolute
    right 0
    top 1.5rem
    color $theme-blue-color
    background $theme-white-color
    width 8.5rem
    height 2.3rem
    line-height 2.3rem
    font-size $font-normal-size
    box-shadow 0 1px 3.8px 0.2px rgba(24, 154, 208, 0.5)
    border-top-left-radius 1.2rem
    border-bottom-left-radius 1.2rem

.gifts-sec
  margin-top 1.5rem
  padding 1.8rem 1.5rem 2.1rem
  background $theme-white-color
  .title
    border-left 3px solid $theme-blue-color
    font-size $font-normal-size
    color $font-main-color
    margin 0 0 1.5rem 0
    padding-left .6rem
  .gift-list
    display flex
    flex-wrap wrap
    justify-content space-between
    .gift-item
      text-align center
      width 16.8rem
      padding 1.7rem 1.8rem 1.7rem 1.1rem
      border 1px solid #e6e6e6
      border-radius .5rem
      background #fff
      flex 0 0 16.8rem
      margin-bottom .9rem
      img
        width 10.2rem
        height 7.3rem
        margin-bottom 2rem
      .gift-title
        font-size $font-normal-size
        color $font-sub-color
        margin-bottom 1.4rem
      .points
        display flex
        justify-content space-between
        svg
          width 1.2rem
          height 1.5rem
          fill none
          margin-right .3rem
          stroke $theme-blue-color
        span
          color $theme-red-color
          font-size 1.5rem
        button
          font-size $font-small-size
          color $theme-blue-color
          border 1px solid $theme-blue-color
          border-radius .3rem
          width 6.1rem
          height 1.8rem
          display block
